# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_ANON_KEY=votre-anon-key-publique
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.votre-projet.supabase.co:5432/postgres

# Security - Generate with: node server/scripts/generate-keys.js
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-64-bytes-base64
ENCRYPTION_KEY=your-32-character-encryption-key-exactly-32-bytes

# Key Rotation Configuration (optional)
# Default: weekly on Sundays at 00:00 UTC
# Disable by not calling initKeyRotationScheduler() in server/index.js
KEY_ROTATION_ENABLED=true
KEY_ROTATION_SCHEDULE=0 0 * * 0

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@evoting.com

# Application Settings
APP_URL=http://localhost:3000
MAX_VOTERS=30000
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring - Sentry
# Obtenir votre DSN sur: https://sentry.io/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
